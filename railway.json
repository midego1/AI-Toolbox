{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "watchPatterns": [
      "src/**",
      "convex/**",
      "next.config.ts",
      "tailwind.config.ts"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

